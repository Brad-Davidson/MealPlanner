<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainFragment">


        <androidx.appcompat.widget.SearchView
            android:id="@+id/rcpSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:gravity="center_horizontal"
            android:hint="Select a recipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lstRecipes"
            android:layout_width="405dp"
            android:layout_height="629dp"
            android:layout_marginTop="86dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcpSearch" />



        <Button
            android:id="@+id/btnCatagories"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="105dp"
            android:text="Catagories"
            android:textSize="9dp"
            app:layout_constraintStart_toEndOf="@+id/btnShoppingList"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Schedule"
            android:textSize="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toEndOf="@+id/btnCatagories"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtShowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Showing:    Recipes"
            app:layout_constraintBottom_toTopOf="@+id/lstRecipes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCatagories" />

        <ImageButton
            android:id="@+id/btnShoppingList"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="105dp"
            android:src="@drawable/ic_shopping_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>